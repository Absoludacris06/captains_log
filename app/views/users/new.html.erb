<div class = "center hero-unit">


<% provide(:title, 'Sign up') %>
<h1>Create an account</h1>

<%= form_for @user, :html => { :class => 'form-horizonal'} do |f| %>

  <div class= "control-group">
  <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
  <%= f.text_field :name, :class => 'text_field' %>
    <%= @user.errors[:name].join(',') %><br>
  </div>
</div>

  <div class="control-group">
  <%= f.label :email, :class => 'control-label' %>
  <div class="controls">
  <%= f.text_field :email %>
  <%= @user.errors[:email].join(',') %><br>
  </div>
</div>

  <div class="control-group">
  <%= f.label :password, :class => 'control-label' %>
  <div class="controls">
  <%= f.password_field :password %>
  <%= @user.errors[:password].join(',') %><br>
  </div>
</div>

  <div class="control-group">
  <%= f.submit "Sign me up!", :class => 'btn btn-success' %>
</div>
<% end %>
</div>



