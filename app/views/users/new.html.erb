<div class="container">
<div class = "center hero-unit">
<div class='modal' id='myModal'>
  <div class='modal-body'>
    <div class='modal-header'>

<% provide(:title, 'Sign up') %>
<h1>Create an account</h1>
</div>
<%= form_for @user, :html => { :class => 'form-horizonal'} do |f| %>

  <div class= "control-group">
    <div class="controls">
  <%= f.text_field :name, :placeholder => "Name", :class => 'text_field' %>
    <%= @user.errors[:name].join(', ') %><br>
  </div>
</div>

  <div class="control-group">
  <div class="controls">
  <%= f.text_field :email, :placeholder => "Email",:class => 'text_field' %>
  <%= @user.errors[:email].join(', ') %><br>
  </div>
</div>

  <div class="control-group">
  <div class="controls">
  <%= f.password_field :password,:placeholder => "Password",:class => 'text_field' %>
  <%= @user.errors[:password].join(', ') %><br>
  </div>
</div>

  <div class="control-group">
  <%= f.submit "Sign me up!", :class => 'btn btn-success' %>
</div>
<% end %>
</div>

</div>
</div>
</div>
